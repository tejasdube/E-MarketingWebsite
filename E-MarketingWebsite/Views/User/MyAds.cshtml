@model IEnumerable<E_MarketingWebsite.Models.tbl_product>
@{
    ViewBag.Title = "My Ads";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        .category-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr); /* 4 columns per row */
            gap: 1rem; /* Adjust the horizontal and vertical spacing */
        }

        .category-item {
            background: #fff;
            padding: 1rem;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            text-align: center;
            /* Ensure items fit within grid columns */
        }

            .category-item img {
                max-width: 100%;
                height: auto;
                border-radius: 8px;
            }

        .btn-delete {
            background-color: #dc3545;
            border: none;
            color: #fff;
            cursor: pointer;
            padding: 0.5rem 1rem;
            border-radius: 5px;
        }

            .btn-delete:hover {
                background-color: #c82333;
            }
            .action{
                display:flex;
                column-gap:2rem;
            }
            
        .btn-update {
            background-color: #007bff;
            border: none;
            color: #fff;
            cursor: pointer;
            padding: 0.5rem 1rem;
            border-radius: 5px;
        }

        .btn-update:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h2 class="text-center mb-4">@ViewBag.Title</h2>
        <p>@TempData["msg"]</p>
        <div class="category-grid">
            @foreach (var product in Model)
            {
                <div class="category-item">
                    <h4>@product.pro_name</h4>
                    <img src="@Url.Content(product.pro_image)" alt="@product.pro_name" style="height:70%; width:100%; border-radius:8px" />
                    <br />
                    <h4>Rs: @product.pro_price</h4>
                    <p>Description: @product.pro_des</p>
                    <br />



                    <div class="action">

                        <div>
                            @using (Html.BeginForm("DeleteAd", "User", FormMethod.Post, new { id = product.pro_id }))
                            {
                                <input type="hidden" name="id" value="@product.pro_id" />
                                <button type="submit" class="btn-delete">Delete</button>
                            }
                        </div>
                        <div>
                        @using (Html.BeginForm("UpdateMyAds", "User", FormMethod.Get, new { id = product.pro_id }))
                        {
                            <input type="hidden" name="id" value="@product.pro_id" />
                            <button type="submit" class="btn-update">Update</button>
                        }
                    </div>
                    </div>
                </div>
            }
             
        </div>
    </div>
</body>
</html>
