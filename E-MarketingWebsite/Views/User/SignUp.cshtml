@model E_MarketingWebsite.Models.tbl_user
@{
    ViewBag.Title = "User Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
          margin-top:60px;
            background-image: url('@Url.Content("~/Content/upload/SignUp.jpg")'); /* Update path as needed */
            background-size: cover;
            background-position: center center;
            background-repeat: no-repeat;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-form {
                    background: rgba(255, 255, 255, 0.9); /* Slightly transparent white background */

            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            max-width: 400px;
            width: 100%;
        }

            .login-form h2 {
                margin-bottom: 1rem;
                font-size: 1.5rem;
                color: #333;
            }

        .form-group {
            position: relative;
            margin-bottom: 1rem;
        }

            .form-group i {
                position: absolute;
                top: 50%;
                left: 0.75rem;
                transform: translateY(-50%);
                color: #aaa;
            }

        .form-control {
            padding-left: 2.5rem;
        }

            .form-control:focus {
                box-shadow: none;
                border-color: #007bff;
            }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

            .btn-success:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .text-danger {
            display: block;
        }

    </style>
</head>
<body>
    <div class="login-form">
        <h2 class="text-center">@ViewBag.Title</h2>

        @using (Html.BeginForm("SignUp", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                <i class="fas fa-user"></i>
                @Html.TextBoxFor(model => model.u_name, new { @class = "form-control", placeholder = "Name" })
                @Html.ValidationMessageFor(model => model.u_name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <i class="fas fa-envelope"></i>
                @Html.TextBoxFor(model => model.u_email, new { @class = "form-control", placeholder = "Email" })
                @Html.ValidationMessageFor(model => model.u_email, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <i class="fas fa-lock"></i>
                @Html.PasswordFor(model => model.u_password, new { @class = "form-control", placeholder = "Password" })
                @Html.ValidationMessageFor(model => model.u_password, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="userImage">Your Image:</label>
                <input type="file" name="file" class="form-control-file" id="userImage" />
                @Html.ValidationMessageFor(model => model.u_image, "", new { @class = "text-danger" })

            </div>
            <div class="form-group">
                <i class="fas fa-phone"></i>
                @Html.TextBoxFor(model => model.u_contact, new { @class = "form-control", placeholder = "contact" })
                @Html.ValidationMessageFor(model => model.u_contact, "", new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-primary btn-block">Register</button>

            <p style="color:red">@ViewBag.error</p>
        }

        <!-- Register Link/Button -->
       
    </div>
</body>
</html>
