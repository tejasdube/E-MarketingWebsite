
@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        .dashboard-container {
            margin: 20px;
        }

        .dashboard-card {
            margin-bottom: 20px;
        }

        .admin-info {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container dashboard-container">
        <h1>Admin Dashboard</h1>

        <div class="row">
            <!-- Users Section -->
            <div class="col-md-4">
                <div class="card dashboard-card">
                    <div class="card-body">
                        <h5 class="card-title">Users</h5>
                        
                        <a href="@Url.Action("Users", "Admin")" class="btn btn-primary">Manage Users</a>
                    </div>
                </div>
            </div>
            <div>


                @Html.ActionLink("Add Categories","Create","Admin" , new {@Class="btn btn-primary"})
            </div>
            <!-- Categories Section -->
            <div class="col-md-4">
                <div class="card dashboard-card">
                    <div class="card-body">
                        <h5 class="card-title">Categories</h5>
                        
                        <a href="@Url.Action("ViewCategory", "Admin")" class="btn btn-primary">Manage Categories</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Admin Info Section -->
        <div class="admin-info">
            <h2>Admin Information</h2>
            <p><strong>Name:</strong> @Session["Name"]</p>
            
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
