@model IEnumerable<E_MarketingWebsite.Models.tbl_user>

@{
    Layout = "~/Views/Shared/Admin.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Users</title>
    <!-- Include Bootstrap CSS from CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            padding: 20px;
        }

        .table-container {
            margin-top: 20px;
        }

        .table thead th {
            background-color: #f8f9fa;
        }

        .table th, .table td {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <h3 class="text-danger">@TempData["msg"]</h3>
        <div class="table-container">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Contact</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.u_name</td>
                            <td>@user.u_email</td>
                            <td>@user.u_contact</td>
                            <td>
                                @using (Html.BeginForm("DeleteUser", "Admin", FormMethod.Post, new { id = user.u_id }))
                                {
                                    <input type="hidden" name="id" value="@user.u_id" />
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Include Bootstrap JS and dependencies from CDN -->
    
</body>
</html>
