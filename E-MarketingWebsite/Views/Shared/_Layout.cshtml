<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .navbar {
            background-color: #333;
            color: #fff;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            z-index: 1000;
        }

            .navbar .navbar-brand {
                font-size: 24px;
                font-weight: bold;
                text-decoration: none;
                color: #fff;
            }

            .navbar .nav {
                display: flex;
                list-style-type: none;
                padding: 0;
                margin: 0;
            }

                .navbar .nav li {
                    margin: 0 10px;
                    position: relative; /* For dropdown positioning */
                }

                .navbar .nav a {
                    color: #fff;
                    text-decoration: none;
                    padding: 10px 15px;
                    display: block;
                }

                    .navbar .nav a:hover {
                        background-color: #575757;
                    }

                .navbar .nav.left {
                    margin-right: auto;
                }

                .navbar .nav.right {
                    margin-left: auto;
                }

        .dropdown-menu {
            display: none;
            position: absolute;
            top: 100%;
            right: 0;
            background-color: #000; /* Set dropdown background color to black */
            border: 1px solid #333; /* Optionally adjust border color */
            border-radius: 4px;
            z-index: 1001; /* Ensure it appears above other content */
        }

            .dropdown-menu a {
                color: #fff; /* Set text color to white for contrast */
                padding: 10px 15px;
                display: block;
                text-decoration: none;
            }

                .dropdown-menu a:hover {
                    background-color: #000; /* Set the background color to black */
                    color: #fff; /* Set the text color to white */
                }

        .dropdown:hover .dropdown-menu {
            display: block;
        }

        .body-content {
            margin-top: 60px; /* Adjust based on navbar height */
            padding: 20px;
        }

        footer {
            text-align: center;
            padding: 10px;
            color: #fff;
            position: inherit;
            width: 100%;
            bottom: 0;
        }
    </style>
</head>
<body>
    <div class="navbar">
        <a href="@Url.Action("UserHome", "User")" class="navbar-brand">E-Marketing</a>
        <ul class="nav left">
            <li><a href="@Url.Action("UserHome", "User")">Category</a></li>
            @if (Session["user"] != null)
            {
                <li>@Html.ActionLink("Create an Ad", "CreateAd", "User")</li>
            }
        </ul>
        <ul class="nav right">
            @if (Session["user"] != null)
            {
                <li class="dropdown">
                    <a href="#" class="navbar-brand">@Session["UserName"]</a>
                    <div class="dropdown-menu">
                        <a href="@Url.Action("Profile", "User", new { id = Session["user"] })">Profile</a>
                        <a href="@Url.Action("MyAds", "User", new { id = Session["user"] })">My Ads</a>
                        <a href="@Url.Action("LogOut", "User")">Log Out</a>
                    </div>
                </li>
            }
            else
            {
                <li>@Html.ActionLink("Sign Up", "SignUp", "User")</li>
                <li>@Html.ActionLink("Sign In", "LogIn", "User")</li>
            }
        </ul>
    </div>
    <div class="body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
